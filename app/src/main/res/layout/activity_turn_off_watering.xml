<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tvTitleWatering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_all_small"
            android:layout_marginTop="@dimen/margin_all_medium"
            android:layout_marginEnd="@dimen/margin_all_small"
            android:text="@string/all_turn_off_watering"
            android:textColor="@color/colorWater"
            android:textSize="@dimen/title_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llWateringFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all_medium"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitleWatering">

            <LinearLayout
                android:id="@+id/llWateringFieldOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWateringFieldOne"
                    style="@style/tvChannelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWateringFieldOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_all_medium"
                    android:paddingEnd="@dimen/padding_all_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWateringFieldTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWateringFieldTwo"
                    style="@style/tvChannelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWateringFieldTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_all_medium"
                    android:paddingEnd="@dimen/padding_all_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWateringFieldThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWateringFieldThree"
                    style="@style/tvChannelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWateringFieldThree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:padding="@dimen/padding_all_medium"
                    android:paddingEnd="@dimen/padding_all_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWateringFieldFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWateringFieldFour"
                    style="@style/tvChannelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWateringFieldFour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_all_medium"
                    android:paddingEnd="@dimen/padding_all_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWateringFieldFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWateringFieldFive"
                    style="@style/tvChannelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWateringFieldFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_all_medium"
                    android:paddingEnd="@dimen/padding_all_big" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWateringFieldSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWateringFieldSix"
                    style="@style/tvChannelField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swWateringFieldSix"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_all_medium"
                    android:paddingEnd="@dimen/padding_all_big" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTitleBarrelsFilling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_all_small"
            android:layout_marginTop="@dimen/margin_all_medium"
            android:layout_marginEnd="@dimen/margin_all_small"
            android:text="@string/all_turn_off_filling"
            android:textColor="@color/colorWater"
            android:textSize="@dimen/title_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llWateringFields" />

        <ImageView
            android:id="@+id/ivFillingShowerBarrel"
            android:layout_width="@dimen/icon_parameter_medium_size"
            android:layout_height="@dimen/icon_parameter_medium_size"
            android:layout_marginStart="@dimen/margin_all_big"
            android:layout_marginTop="@dimen/margin_all_small"
            android:contentDescription="@string/content_description_filling_shower_barrel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleBarrelsFilling"
            app:srcCompat="@drawable/selector_shower_barrel_fill" />

        <ImageView
            android:id="@+id/ivFillingWateringBarrel"
            android:layout_width="@dimen/icon_parameter_medium_size"
            android:layout_height="@dimen/icon_parameter_medium_size"
            android:layout_marginTop="@dimen/margin_all_small"
            android:layout_marginEnd="@dimen/margin_all_big"
            android:contentDescription="@string/content_description_filling_watering_barrel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvTitleBarrelsFilling"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleBarrelsFilling"
            app:srcCompat="@drawable/selector_watering_barrel_fill" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swFillingShowerBarrel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all_small"
            android:padding="@dimen/padding_all_medium"
            app:layout_constraintEnd_toEndOf="@+id/ivFillingShowerBarrel"
            app:layout_constraintStart_toStartOf="@+id/ivFillingShowerBarrel"
            app:layout_constraintTop_toBottomOf="@+id/ivFillingShowerBarrel" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swFillingWateringBarrel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all_small"
            android:padding="@dimen/padding_all_medium"
            app:layout_constraintEnd_toEndOf="@+id/ivFillingWateringBarrel"
            app:layout_constraintStart_toStartOf="@+id/ivFillingWateringBarrel"
            app:layout_constraintTop_toBottomOf="@+id/ivFillingWateringBarrel" />

        <Button
            android:id="@+id/btTurnOffWateringAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_turn_off_all"
            android:textSize="@dimen/text_size_medium"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin_all_medium"
            android:layout_marginStart="@dimen/margin_all_small"
            android:layout_marginEnd="@dimen/margin_all_small"
            app:layout_constraintTop_toBottomOf="@id/swFillingShowerBarrel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/llWateringButtons"/>

        <LinearLayout
            android:id="@+id/llWateringButtons"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btTurnOffWateringAll"
            android:layout_marginTop="@dimen/margin_all_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btCancel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/all_cancel" />

            <Button
                android:id="@+id/btSave"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/all_save" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>