<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tvChannelField">
        <item name="android:padding">@dimen/padding_all_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:hint">@string/all_channel_name</item>
    </style>

    <style name="etChannelName" parent="tvChannelField">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="tvWateringTime">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:maxEms">3</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
